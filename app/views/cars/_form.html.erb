<h4>Información del vehiculo</h4>
<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this policy from being saved:</h2>
      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
     <%= f.label :Marca %><br>
     <%= f.text_field :brand %>
   </div>
   <div class="field">
     <%= f.label :Precio %><br>
     <%= f.text_field :price %>
   </div>
   <div class="field">
     <%= f.label :Modelo %><br>
     <%= f.text_field :model %>
   </div>
   <div class="field">
     <%= f.label :Año %><br>
     <%= f.select :year, (Time.zone.now.year - 20)..(Time.zone.now.year + 1) %>
   </div>
   <div class="field">
     <%= f.label :Uso_del_auto %><br>
     <%= f.check_box :use %>
   </div>
   <div type="submit" class="actions" id="form2" hidden="hidden">
    <br>
     <%= f.submit "Enviar" %>
   </div>
<% end %>
