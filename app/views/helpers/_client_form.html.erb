<% form_for @client do |f| %>
<h4>Datos Personales</h4>
<div class="field">
  <%= f.label :Nombre_completo %><br>
  <%= f.text_field :fullname %>
</div>
<div class="field">
  <%= f.label :Email %><br>
  <%= f.email_field :email %>
</div>
<div class="field">
  <%= f.label :Telefono %><br>
  <%= f.telephone_field :phone %>
</div>
<div class="field">
  <%= f.label :Celular %><br>
  <%= f.telephone_field :cellphone %>
</div>
<div class="field">
  <%= f.label :Fax %><br>
  <%= f.telephone_field :fax %>
</div>
<div class="field">
  <%= f.label :Fecha_de_nacimiento %><br>
  <%= f.date_select :birthdate, :start_year => 1940 %>
</div>
<div class="field">
  <%= f.label :Genero %><br>
  <%= f.text_field :gender %>
</div>
<div class="field">
  <%= f.label :Edad %><br>
  <%= f.text_field :age %>
</div>
<div type="submit" class="actions" >
  <br>
  <%= f.submit "Enviar" %>
</div>
<% end %>