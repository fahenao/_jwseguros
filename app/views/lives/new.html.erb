<div class="container">
	<div class="row">
		<div class="col-md-2"></div> <!-- empty_column -->
		<div class="col-md-6">
			<br>
			<%= form_for :life, url: '/lives' do |f| %>
			<%= render 'helpers/client_form' %>
			<br>
			<!--Life_form -->
			<div class="field">
				<%= f.label :Suma_asegurada %> <br>
				<%= f.text_field :sum_assured %>
			</div>
			<div class="field">
				<%= f.label :Estado_civil %> <br>
				<%= f.select(:marital_status, options_for_select([['Casado', 'Married'], ['Soltero', 'Single']])) %>
			</div>
			<div class="field">
				<%= f.label :Commentarios %> <br>
				<%= f.text_area :comments %> <br>
			</div>			
			<br>
			<%= f.submit "Enviar" %>
			<% end %>
			
		</div>
		<div class="col-md-4"></div> <!-- empty_column -->
	</div>
</div>
<br>
<br>