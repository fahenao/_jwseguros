<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<%= form_for :surety, url: '/sureties' do |f| %>
				<form class="form-control">
					<%= render 'helpers/client_form' %> <!--Client_form -->
					<div class="page-header">
						<h3>Datos para Cotizar</h3>
					</div>
					<!--Surety_form -->
					<div class="form-group">
						<%= f.label :Tipo_de_Fianza %> 
						<%= f.text_field :surety_type, :placeholder => "Tipo de Fianza", :class => "form-control"  %>
					</div>
					<div class="form-group">
						<%= f.label :Valor_de_la_obra %> 
						<%= f.text_field :value, :placeholder => "Valor de la obra a afianzar", :class => "form-control"  %> 
					</div>
					<div class="form-group">
						<%= f.label :Porcentaje_requerido_a_afianzar %> 
						<%= f.text_field :percentage, :placeholder => "Porcentaje a afianzar. Ejemplo: 5%, 10%.", :class => "form-control"  %> 
					</div>
					<div class="form-group">
						<%= f.label :Commentarios %> 
						<%= f.text_field :comments, :placeholder => "Commentarios", :class => "form-control"  %> 
					</div>
						<button type="submit" class="btn btn-default">
							Enviar
						</button>
				</form>
			<% end %>
		</div>
		<div class="col-lg-6"> <!-- empty_column -->

		</div> 
	</div>
</div>
<br>
<br>